{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "cryptopaymentdb": "Host=localhost;Database=CryptoPaymentDb;Username=postgres;Password=postgres"
  },
  "Identity": {
    "Audience": "cryptopayment",
    "RequireHttpsMetadata": false
  },
  "Blockchain": {
    "Bitcoin": {
      "RpcEndpoint": "http://localhost:18332",
      "RpcUsername": "bitcoin",
      "RpcPassword": "bitcoin",
      "Network": "Testnet",
      "ConfirmationsRequired": 3,
      "MinimumAmount": 0.0001,
      "HDWalletAccountIndex": 0,
      "TransactionTimeout": "00:30:00"
    },
    "Ethereum": {
      "RpcEndpoint": "https://sepolia.infura.io/v3/YOUR_PROJECT_ID",
      "InfuraProjectId": "YOUR_INFURA_PROJECT_ID",
      "AlchemyApiKey": "YOUR_ALCHEMY_API_KEY",
      "Network": "Testnet",
      "ConfirmationsRequired": 12,
      "MinimumAmount": 0.001,
      "GasLimit": 21000,
      "MaxFeePerGas": 20000000000,
      "MaxPriorityFeePerGas": 2000000000,
      "TokenContracts": {
        "USDT": "0x110a13FC3efE6A245B50102D2d79B3E76125Ae83",
        "USDC": "0x07865c6E87B9F70255377e024ace6630C1Eaa37F"
      },
      "TransactionTimeout": "00:10:00"
    },
    "Providers": {
      "CoinbaseCommerce": {
        "ApiKey": "YOUR_COINBASE_COMMERCE_API_KEY",
        "WebhookSecret": "YOUR_COINBASE_COMMERCE_WEBHOOK_SECRET",
        "BaseUrl": "https://api.commerce.coinbase.com",
        "Enabled": false
      },
      "BitPay": {
        "ApiToken": "YOUR_BITPAY_API_TOKEN",
        "PrivateKey": "YOUR_BITPAY_PRIVATE_KEY",
        "BaseUrl": "https://test.bitpay.com",
        "Enabled": false
      }
    },
    "Security": {
      "EncryptionKey": "your-32-character-encryption-key-here",
      "KeyStorageType": "InMemory",
      "KeyStoragePath": null,
      "ValidateAddresses": true,
      "RequireSecureConnection": true
    },
    "Monitoring": {
      "PollingInterval": "00:00:30",
      "WebSocketReconnectDelay": "00:00:05",
      "MaxReconnectAttempts": 10,
      "EnableWebSocketMonitoring": true,
      "EnablePollingFallback": true,
      "TransactionExpiryTime": "1.00:00:00"
    }
  }
}