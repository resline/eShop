# Crypto Payment API Environment Variables
# Copy this file to .env and set your actual values
# NEVER commit .env files to version control

# Master encryption key - must be 32+ characters
# Generate with: openssl rand -base64 32
CRYPTO_PAYMENT_MASTER_KEY=your-32-character-master-encryption-key-here

# Alternative encryption key (fallback)
CRYPTO_PAYMENT_ENCRYPTION_KEY=your-32-character-encryption-key-here

# Blockchain RPC Credentials
BITCOIN_RPC_USERNAME=bitcoin
BITCOIN_RPC_PASSWORD=bitcoin

# Ethereum Provider Credentials
INFURA_PROJECT_ID=your-infura-project-id-here
ALCHEMY_API_KEY=your-alchemy-api-key-here

# Payment Provider API Keys
COINBASE_COMMERCE_API_KEY=your-coinbase-commerce-api-key
COINBASE_COMMERCE_WEBHOOK_SECRET=your-coinbase-webhook-secret

BITPAY_API_TOKEN=your-bitpay-api-token
BITPAY_PRIVATE_KEY=your-bitpay-private-key
BITPAY_WEBHOOK_SECRET=your-bitpay-webhook-secret

# Database Connection String
DATABASE_HOST=localhost
DATABASE_NAME=CryptoPaymentDb
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres

# Identity Server Configuration
IDENTITY_AUTHORITY=https://localhost:5001
IDENTITY_CLIENT_ID=cryptopayment
IDENTITY_CLIENT_SECRET=your-client-secret

# Additional Security Settings
WEBHOOK_SECRET_DEFAULT=your-default-webhook-secret
API_KEY_ENCRYPTION_KEY=your-api-key-encryption-key

# Monitoring and Logging
ENABLE_DETAILED_LOGGING=false
LOG_LEVEL=Information
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Rate Limiting Overrides (optional)
RATE_LIMIT_GLOBAL=100
RATE_LIMIT_API=50
RATE_LIMIT_WEBHOOK=20
RATE_LIMIT_PAYMENT=10
RATE_LIMIT_ADMIN=10